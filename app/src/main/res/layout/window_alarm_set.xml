<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="wrap_content"    android:layout_height="wrap_content"android:background="#f0000000"    android:orientation="vertical"    android:padding="2dp"    tools:showIn="@style/AppTheme">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="3dp"        android:gravity="center"        android:text="设置闹钟"        android:textColor="#1A9FFF"        android:textSize="20dp" />    <TimePicker        android:id="@+id/timePicker"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:timePickerMode="spinner"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">    <CheckBox        android:id="@+id/chk_repeat_once"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="6dp"        android:text="一次"        android:checked="true"        android:textSize="15dp" />    <CheckBox        android:id="@+id/chk_repeat_everyday"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="6dp"        android:text="每天"        android:textSize="15dp" />    </LinearLayout>    <CheckBox        android:id="@+id/chk_repeat_week"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="6dp"        android:text="自定义"        android:ems="20"        android:textSize="15dp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="5dp"        android:orientation="horizontal">        <Button            android:id="@+id/btn_cancel"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="取消"            android:textColor="#1A9FFF"            android:textSize="17dp" />        <Button            android:id="@+id/btn_confirm"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="确定"            android:textColor="#1A9FFF"            android:textSize="17dp" />    </LinearLayout></LinearLayout>